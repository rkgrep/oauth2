{
    "name": "joomla/oauth2",
    "type": "joomla-package",
    "description": "Joomla OAuth2 Package",
    "keywords": ["joomla", "framework", "oauth2"],
    "homepage": "https://github.com/joomla-framework/oauth2",
    "license": "GPL-2.0+",
    "require": {
        "php": ">=5.4.0",
        "guzzlehttp/guzzle": "~5.0|~6.0",
        "joomla/uri": "2.0.*@dev"
    },
    "require-dev": {
        "joomla/test": "~1.0",
        "joomla/registry": "2.0.*@dev",
        "phpunit/phpunit": "4.*",
        "squizlabs/php_codesniffer": "1.*"
    },
    "autoload": {
        "psr-4": {
            "Joomla\\OAuth2\\": "src/",
            "Joomla\\OAuth2\\Tests\\": "Tests/"
        }
    },
    "extra": {
        "branch-alias": {
	        "dev-2.0-dev": "2.0-dev"
        }
    }
}
